@using TeamBananaPhase4.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
   
    @Scripts.Render("~/App_Themes/MainTheme/js/menu.js")
    @Styles.Render("~/App_Themes/MainTheme/css/inspiritas.css")
    @Styles.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/themes/base/jquery-ui.css")
    @Styles.Render("~/App_Themes/MainTheme/css/overwrites.css")
    @Styles.Render("~/App_Themes/MainTheme/css/datepicker.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar 
    ================================================== -->
    <div class="navbar navbar-static-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="/">IU Committee</a>
                <div class="nav-collapse collapse" id="main-menu">
                    <div class="pull-right">
                        @if (Request.IsAuthenticated)
                        {
                            <text>@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                  {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-large">Logout
                                @User.Identity.Name</a>
                                  }</text>
                        }
                        else
                        {
                            <a href="/Account/Login" class="btn btn-large">Login</a>
                        }
                        <!--<img class="avatar" src="images/littke.png">
                        <span class="name">Jonatan Littke</span><br />
                        <span class="links"><a href="#">Settings</a> <a href="#">Logout</a> </span>-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row-fluid">
            <div class="span3">
                <aside>
                <nav>
                    @Html.SiteMenu()
                </nav>
            </aside>
            </div>
            <div class="span9" id="content-wrapper">
                <div id="content">
                    <!-- Navbar
                ================================================== -->
                    <header>
                    <!--<div class="pull-right">
                        <a class="btn btn-small">Edit</a>
                        <a class="btn btn-small">Shoot me</a>
                    </div>-->
                    <h1>@ViewBag.Title</h1>
                  </header>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"
        type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"
        type="text/javascript"></script>
        
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/App_Themes/MainTheme/js/datepicker.js")
    <script type="text/javascript">

            $(function () {
                $('.datatable').dataTable({
                    "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>"
                });

                $('.datepicker').datetimepicker({
                    controlType: 'select',
                    timeFormat: 'hh:mm tt'
                });
            });
	
    </script>
</body>
</html>
